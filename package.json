{
  "name": "@3asoftwares/support-app",
  "version": "1.0.0",
  "description": "Customer Support Ticketing System - Admin Portal for 3A Softwares",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3003 --open=/index.html",
    "sass": "sass --watch scss/main.scss:css/main.css",
    "build:css": "sass scss/main.scss:css/main.css --style=compressed",
    "dev": "concurrently \"yarn run sass\" \"yarn run start\""
  },
  "keywords": [
    "customer-support",
    "ticketing-system",
    "admin-portal",
    "javascript",
    "bootstrap",
    "scss"
  ],
  "author": "3A Softwares",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.69.0",
    "concurrently": "^8.2.0",
    "live-server": "^1.2.2"
  },
  "technologies": {
    "frontend": [
      "JavaScript (ES6+)",
      "HTML5",
      "CSS3",
      "SCSS"
    ],
    "ui-frameworks": [
      "Bootstrap 5",
      "Material Icons"
    ],
    "features": [
      "Fetch API",
      "Debouncing",
      "Throttling",
      "Local Storage"
    ],
    "patterns": [
      "MVC",
      "Singleton Pattern"
    ]
  }
}
